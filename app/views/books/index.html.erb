<div class="col-xs-12">

  <div class="col-xs-6">
    <h2>The Books</h2>
  </div>

  <div class="col-xs-6 pull-right">
    <p class="pull-right"> <%= link_to("(add new book)", new_book_path) if @current_user %></p>
  </div>
</div>

<div class="row">

  <div class="col-xs-8 col-centered text-center">
    <table class="table table-hover">
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to "#{book.title} (#{book.author})", book_path(book) %>
        </td>
        <% end %>
      </tr>
    </table>
  </div>
</div>
