<div class="move_down">

  <h2>Edit Your Profile</h2>

  <div class="row">
    <div class="col-xs-12">

      <%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
      <fieldset>

        <div class="form-group">
          <%= f.label :username, "Username:", class: "col-xs-4 control-label white-text" %>
          <div class="col-xs-6">
            <%= f.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password:", class: "col-xs-4 control-label white-text" %>
          <div class="col-xs-6">
            <%= f.text_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Submit", class: "btn btn-default btn-primary pull-right move_left" %>
        </div>
      </fieldset>
      <% end %>
    </div>
  </div>

</div>
