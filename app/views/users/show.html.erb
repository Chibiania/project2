<div class="move_down">

  <div class="col-xs-12">
    <h2><%= @user.username %>
      <p class="inline small yellow-text">
        <%= link_to("(edit)", edit_user_path(@user)) if @current_user == @user %></p></h2>
      </div>

      <div class="row  white-text">

        <h3 class="text-center">My Additions</h3>
        <div class="col-xs-10 text-center move_down_more">
          <table class="table move_right">
            <thead>
              <tr>
                <th>
                  <h4 class="text-left">Books</h4>
                </th>
                <th>
                  <h4 class="text-right">Adaptations</h4>
                </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <% @user.books.each do |book| %>
                  <p class="text-left">
                    <%= link_to "#{book.title} (#{book.author})", book_path(book) %>
                  </p>
                  <% end %>
                </td>
                <td>
                  <% @user.adaptations.each do |adaptation| %>
                  <p class="text-right">
                    <%= link_to "#{adaptation.title} (#{adaptation.date_of_release})", adaptation_path( adaptation ) %>
                  </p>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
