<div class="col-xs-12">

  <div class="col-xs-4 pull-right">
    <p class="pull-right">
      <%= link_to("(edit adaptation)", edit_adaptation_path) if @current_user %>
    </p>
  </div>

  <div class="col-xs-12">
    <h2> <%= @adaptation.title %>
      <p class="inline small">
        <%= "(#{@adaptation.date_of_release})"%>
      </p>
    </h2>
  </div>
</div>

<div class="row">

  <div class="col-xs-8 text-center">
    <table class="table table-hover">
      <tr>
        <td>
          <p> Comparison to Book:
            <%= @adaptation.comparison_to_book%>
          </p>
        </td>
      </tr>
      <tr>
        <td>
          <p> Adapted from:
            <%= link_to @adaptation.book.title, book_path(@adaptation.book_id)%>
          </p>
        </td>
      </tr>
    </table>
  </div>
  <div class="col-xs-4 pull-right">
    <p><%= image_tag("me.jpg", class: "img-responsive", :alt => "it's a pic!")%></p>
  </div>

</div>
